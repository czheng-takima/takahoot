    "@babel/preset-env": "7.4.2",
    "babel-loader": "8.0.5",
    "clean-webpack-plugin": "1.0.1",
    "copy-webpack-plugin": "5.0.1",
    "css-loader": "2.1.1",
    "electron-packager": "13.1.1",
    "electron-rebuild": "^1.8.4",
    "file-loader": "3.0.1",
    "html-webpack-plugin": "3.2.0",
    "node-sass": "4.11.0",
