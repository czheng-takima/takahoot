{
  "name": "takahoot",
  "version": "1.0.0",
  "description": "A physical target remote control for Kahoot Games",
  "repository": "https://github.com/resourcepool/takahoot",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.build.js",
    "dev": "webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.js",
    "postinstall": "(cd ./bridge && npm install)",
    "prepackage": "webpack --config webpack.build.js",
    "package": "electron-packager ./dist --out=./builds --all",
    "prod": "webpack --config webpack.build.js && electron --noDevServer ."
  },
